<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.lastsoft.plog.ViewPlayFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        >
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            />
        <RelativeLayout
            android:id="@+id/bottom_align"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >
            <LinearLayout
                android:id="@+id/belowBack"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="8dp"
                android:background="#00000000"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignBottom="@id/belowBack"
                android:background="#00000000"
                android:padding="8dp" >

                <TextView
                    android:id="@+id/gameDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/white"
                    android:textSize="@dimen/swingview_pro_desc_textSize"
                    style="@style/AudioFileInfoOverlayText"/>

                <TextView
                    android:id="@+id/gameName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/gameDate"
                    android:fontFamily="sans-serif"
                    android:maxLines="2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/swingview_pro_swing_title_textSize"
                    android:textStyle="bold"
                    style="@style/AudioFileInfoOverlayText"/>

              <!--  <TextView
                    android:id="@+id/swing_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_tag"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="@dimen/swingview_pro_label_textSize"
                    android:visibility="gone" />-->
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:id="@+id/linearLayout"
        android:orientation="vertical">
    </LinearLayout>
</LinearLayout>
